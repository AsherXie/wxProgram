.top_line {
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.top_line .cool_circle {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #ccc;
  margin-right: 10px;
}

.classify_cook {
  padding: 20rpx 20rpx 75rpx 20rpx;
}

.summary_content {
  padding: 20rpx;
  font-size: 27rpx;
  font-family: '华文中宋';
}

.cook_make {
  margin-top: 20px;
  text-align: center;
  font-size: 29rpx;
}

.cook_make image {
  width: 40%;
}

.cook_bottom {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  position: fixed;
  bottom: 0;
}

.cook_bottom>view {
  flex: 1;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  color: white;
}

.name {
  font-weight: bold;
  line-height: 100rpx;
  padding: 20rpx;
}

.summary {
  padding: 20rpx;
}

.thingth {
  width: 80%;
  border-top: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}

.use_thingth {
  padding: 20rpx;
}

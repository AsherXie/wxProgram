text{
  margin: 0;
  padding: 0;
  line-height: 0;
}

.top_search {
  height: 80rpx;
  background: black;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top_search input {
  width: 70%;
  background: white;
  border-radius: 30rpx;
  margin-right: 30rpx;
  font-size: 29rpx;
  padding-left: 30rpx;
}

.top_search text {
  font-size: 33rpx;
  color: white
}

.classify_scroll {
  width: 100%;
  white-space: nowrap;
}

.classify_scroll .scroll_item {
  text-align: center;
  font-size: 29rpx;
  display: inline-block;
  padding: 10px;
  width: 150rpx;
  height: 100%;
}

.classify_scroll .scroll_item image {
  width: 140rpx;
  height: 140rpx;
}

/*华丽丽分割线  */

.cut {
  width: 100%;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 17px;
  margin-top: 10px;
}

.cut>view {
  margin: 0 10px;
}
.cut_text{
  font-size: 33rpx
}
.cut .line {
  width: 20%;
  height: 1px;
  background: #ccc;
}

.cut .circle {
  width: 3px;
  height: 3px;
  background: #ccc;
}

.groom {
  width: 100%;
  margin-top: 20px;
}

.groom_item {
  width: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 0 10rpx
}

.groom_item image {
  width: 200rpx;
}

.groom_item .groom_title {
  font-size: 30rpx;
  line-height: 0;
  margin-left: 14rpx;
}

.groom .user_count{
  padding: 5rpx 10rpx;
  background: #ccc;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.groom .groom_decrible{
  width: 70%;
  margin: 0;
  padding: 0;
  height: 100%;
}